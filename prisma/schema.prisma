datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Movie {
  id Int @id @default(autoincrement()) 
  title String
  year Int
  getnre String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 기본적으로 모두 required이고 ?만 nullable
// graphQL은 모두 nullable이고 !만 required